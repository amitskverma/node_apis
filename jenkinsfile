pipeline {
    agent any

    tools {
        nodejs "nodejs-22"   // Name you configured in Jenkins "NodeJS installations"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/amitskverma/node_apis.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }
    }
}
